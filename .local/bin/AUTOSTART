#!/bin/sh

# Enable numlock
numlockx on &

# Remaps caps to super
setxkbmap -option caps:super

# Greenclip Daemon (for clipboard manager)
greenclip daemon &

# Notification Daemon
dunst &

# Compositor
picom &

sleep 1s
# Auto detect screen profile
autorandr --change &

sleep 2s
# Reload qtile
qtile cmd-obj -o cmd -f restart

sleep 2s
# Set wallpaper and colorscheme
wal -R
