#!/bin/sh

# Enable numlock
numlockx on &

# Remaps caps to super
setxkbmap -option caps:super

# Greenclip Daemon (for clipboard manager)
greenclip daemon &

# Notification Daemon
dunst &

# Compositor
picom &
sleep 1s

# Auto detect screen profile
autorandr --change &

# Reload qtile
qtile cmd-obj -o cmd -f restart

# Set wallpaper 
~/.fehbg || feh --bg-fill ~/Wallpapers/default.jpg

# Load colorscheme
wal -R || wal --theme default

# Reload qtile
qtile cmd-obj -o cmd -f restart
